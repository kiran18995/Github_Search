<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.kiran.githubsearch.ui.home.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/actionSearchFragmentToRepositoryFragment"
            app:destination="@id/repositoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/repositoryFragment"
        android:name="com.kiran.githubsearch.ui.repository.RepositoryFragment"
        android:label="Repository"
        tools:layout="@layout/fragment_repository">
        <argument
            android:name="repo"
            app:argType="com.kiran.githubsearch.data.models.Repo" />
    </fragment>

</navigation>